  "devDependencies": {
    "@types/node": "^24.10.13",
    "bumpp": "latest",
    "tsdown": "^0.20.3",
    "turbo": "^2.8.9",
    "typescript": "^5.9.3",
    "vite": "^7.3.1",
    "vitest": "^4.0.18"
  },
  "packageManager": "pnpm@10.30.1",
  "engines": {
    "node": ">=v24.0.0"
  }
}
